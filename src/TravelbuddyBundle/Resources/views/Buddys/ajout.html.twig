
   {% extends 'base.html.twig' %}

{% block stylesheets %}
    <style>
        .top_panel_wrap{
            background: url({{ asset("assets/wp-content/uploads/2015/05/menu_bg.jpg") }}) no-repeat center top #63cac5;
            margin-top: 0px !important;
            margin-bottom: 20px !important;
        }
    </style>
{% endblock %}


{% block body %}

    <style>
        @import url("https://fonts.googletapis.com/css?family=Open+Sans:300,400,600,700");
        * {
            padding: 0;
            margin: 0;
            font-family: Raleway, sans-serif;
        }


        .container {
            width: 100%;
            height: 100%;
            position: absolute;
            z-index: 1;
            background-image: url("{{ asset("assets/images/Buddy/small-group-tours-common-wanderer.jpg" ) }}");
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center;
        }

        .blur {
            opacity: 0.5;
            background-color: black;
            width: 100%;
            height: 100%;
            z-index: 1;
            position: absolute;
        }

        .content {
            display: block;
        }
        .content .text {
            width: auto;
            margin: 20px;
            position: relative;
            top: 40px;
            z-index: 5;
        }
        .content .text p {
            color: #FAF7F5;
            font-size: 30px;
        }
        .content .Form {
            size: 500px;
            padding: 50px;
            width: auto;
            position: relative;
            top: 50px;
        }
        .content .Form .blur1 {
            opacity: 0.5;
            width: 100%;
            height: 500px;
            position: relative;
            background-color: white;
            z-index: 1;
            border-radius: 10px;
        }
        .content .Form form {
            position: absolute;
            z-index: 6;
            top: 10%;
            margin: 20px;
        }
        .content .Form form input {
            margin-bottom: 10px;
            padding: 10px;
            width: 100%;
            border-radius: 5px;
            outline: none;
            user-select: none;
        }
        .content .Form form button {
            padding: 10px;
            border-radius: 5px;
            user-select: none;
            outline: none;
            margin-left: 20px;
            font-size: 20px;
            border: none;
        }
        .content .Form form button:hover {
            background-color: #303F9F;
            color: white;
            font-weight: bold;
        }

        .message {
            display: none;
            position: absolute;
            border: 2px solid;
            z-index: 6;
            top: 0;
            width: 100%;
            height: 100%;
        }
        .message p {
            color: white;
            font-size: 40px;
            text-align: center;
            padding-top: 40px;
        }

        @media (min-width: 530px) {
            .content {
                display: flex;
                flex-wrap: wrap;
            }
            .content .text {
                width: 40%;
                position: relative;
                left: 5%;
                padding-top: 70px;
            }
            .content .Form {
                position: absolute;
                right: 40px;
                margin-left: 20px;
                width: 40%;
            }
        }

        table td {
            color: #320300;
        }
    </style>

    <br><br><br>

    <div class="container"  style="clear:both;!important;margin-top: 200px;height: 800px;position: relative;">



