{% extends 'base.html.twig' %}

{% block body %}
    <h1>Pay</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pay.id }}</td>
            </tr>
            <tr>
                <th>Iso</th>
                <td>{{ pay.iso }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ pay.name }}</td>
            </tr>
            <tr>
                <th>Nicename</th>
                <td>{{ pay.nicename }}</td>
            </tr>
            <tr>
                <th>Iso3</th>
                <td>{{ pay.iso3 }}</td>
            </tr>
            <tr>
                <th>Numcode</th>
                <td>{{ pay.numcode }}</td>
            </tr>
            <tr>
                <th>Phonecode</th>
                <td>{{ pay.phonecode }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('pays_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('pays_edit', { 'id': pay.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
